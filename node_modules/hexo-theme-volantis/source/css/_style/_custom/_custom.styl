body {

  background:url(/ChuBaiWarmlight/images/background.png);

  background-repeat: no-repeat;

  background-attachment:fixed; //不重复

  background-size: cover;      //填充

  background-position:50% 50%;

}

.l_header .container #wrapper .nav-main a{
  cursor: pointer;
}

.cover-wrapper .cover-body .title{
  white-space: nowrap;
  overflow: hidden;
  width: 0%;
  animation: slide 6s cubic-bezier(0.5, 0, 0.5, 1) forwards; /* 使用自定义缓动函数 */
}



@keyframes slide {
  from {
    width: 0%; /* 动画开始时宽度为0% */
  }
  to {
    width: 100%; /* 动画结束时宽度为100% */
  }
}
